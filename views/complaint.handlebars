<form method="post" action="/registerComplaint">

  <h2>Register a Complaint</h2>
  <div class="form-group">
    <label>Name</label>
    <input
      value="{{user.name}}"
      class="form-control"
      type="text"
      name="name"
      placeholder="Name"
      readonly
    />
  </div>
  <div class="form-group">
    <label>Email</label>
    <input
      value="{{user.email}}"
      class="form-control"
      type="email"
      name="email"
      placeholder="Email"
      readonly
    />
  </div>
  <div class="form-group">
    <label>Contact Number</label>
    <input
      value="{{user.phone}}"
      class="form-control"
      type="text"
      name="contact"
      placeholder="Phone Number"
      readonly
    />
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea
      type="text"
      class="form-control"
      name="desc"
      cols="30"
      rows="10"
      placeholder="Enter the Description"
    ></textarea>
  </div>
  <button class="btn btn-success" type="submit">Submit Complaint</button>
  <br />
  <br />
  Wanna change your mind?
  <a class="btn btn-warning btn-sm" href="/">Back</a>
  <br />
  <br />

</form>